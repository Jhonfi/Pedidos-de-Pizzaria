<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:background="#121212"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imageViewPizzaSelect"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_pizza_select"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escolha seus Sabores:"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <CheckBox
            android:id="@+id/checkBoxCalabresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calabresa"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:buttonTint="#1DB954"
            android:paddingVertical="8dp"/>

        <CheckBox
            android:id="@+id/checkBoxMarguerita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marguerita"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:buttonTint="#1DB954"
            android:paddingVertical="8dp"/>

        <CheckBox
            android:id="@+id/checkBoxPortuguesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Portuguesa"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:buttonTint="#1DB954"
            android:paddingVertical="8dp"/>

        <CheckBox
            android:id="@+id/checkBoxMussarela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mussarela"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:buttonTint="#1DB954"
            android:paddingVertical="8dp"/>

        <CheckBox
            android:id="@+id/checkBoxQuatroQueijos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quatro Queijos"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:buttonTint="#1DB954"
            android:paddingVertical="8dp"/>


        <Button
            android:id="@+id/buttonProximaEtapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PrÃ³xima Etapa"
            android:backgroundTint="#1DB954"
            android:textColor="#121212"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="14dp"/>

    </LinearLayout>

</ScrollView>